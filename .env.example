# Example environment configuration for 3D Printer Cost Calculator
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://cost_calculator:password@localhost:5432/cost_calculator_db
POSTGRES_DB=cost_calculator_db
POSTGRES_USER=cost_calculator
POSTGRES_PASSWORD=your_secure_password

# Application Settings
STREAMLIT_SERVER_PORT=5000
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Optional: Performance Settings
POSTGRES_MAX_CONNECTIONS=20
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# Optional: Monitoring (uncomment if using)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking